        function SaveHD(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/FormBKNopTien/SaveUpdate",
                data: data,
                success: function (result) {
                    alert(result);
                    window.location.href = '/FormBKNopTien/Index';


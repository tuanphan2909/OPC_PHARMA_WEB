@model IEnumerable<web4.Models.DmKhachHang>

@{
    ViewBag.Title = "Danh Mục Khách Hàng TDV";
}

<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css" rel="stylesheet" />

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>

<!--CSS-->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f4f8;
        color: #333;
    }

    h2 {
        margin: 20px 0;
        font-size: 2em;
        color: #dc3545;
        text-align: center;
        text-transform: uppercase;
    }

    .table-responsive {
        margin: 20px 0;
    }

    .table thead th {
        background-color: #007bff; /* Bootstrap primary blue color */
        color: white;
        text-align: center;
        border-bottom: 2px solid #ddd;
        cursor: pointer;
    }

        .table thead th.sorting,
        .table thead th.sorting_asc,
        .table thead th.sorting_desc {
            background-color: #0056b3 !important; /* Darker blue for active sort */
            color: white !important;
        }

    .table tbody td {
        vertical-align: middle;
    }

    .table tbody tr:nth-child(odd) {
        background-color: #e9ecef;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .dt-buttons {
        margin-bottom: 10px;
    }

        .dt-buttons .dt-button {
            background-color: #ffc107; /* Bootstrap warning yellow color */
            color: black;
            border: none;
            padding: 5px 10px;
            margin: 2px;
            border-radius: 3px;
            cursor: pointer;
        }

            .dt-buttons .dt-button:hover {
                background-color: #e0a800; /* Darker yellow for hover effect */
            }

    .dataTables_wrapper .dataTables_filter {
        float: right;
        text-align: right;
    }

        .dataTables_wrapper .dataTables_filter label {
            color: #343a40;
            font-weight: bold;
        }

        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid #343a40;
            border-radius: 5px;
            padding: 5px;
            margin-left: 5px;
        }

    .dataTables_wrapper .dataTables_paginate {
        float: right;
    }

    .dataTables_wrapper .dataTables_info {
        float: left;
    }

    /* Custom alignment for specific columns */
    .table tbody td:nth-child(2) {
        text-align: left;
    }

    .table tbody td:nth-child(7) {
        text-align: right;
    }

    /* Prevent MST column from wrapping */
    .table tbody td:nth-child(6) {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<h2>DANH MỤC KHÁCH HÀNG TDV</h2>

<div class="table-responsive">
    <table id="dmKhachHangTable" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã Đối Tượng</th>
                <th>Tên Đối Tượng</th>
                <th>Địa Chỉ</th>
                <th>Số Điện Thoại</th>
                <th>Số Hợp Đồng</th>
                <th>MST</th>
                <th>Doanh Thu Năm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ma_Dt</td>
                    <td>@item.Ten_Dt</td>
                    <td>@item.DiaChi</td>
                    <td>@item.So_Dien_Thoai</td>
                    <td>@item.So_Hop_Dong</td>
                    <td>@item.MST</td>
                    <td>@Html.Raw(string.Format("{0:0,0}", item.Doanh_Thu_Nam).Replace(",", "."))</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#dmKhachHangTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "pageLength": 20, // Hiển thị 20 đối tượng mỗi trang
            "language": {
                "search": "Tìm kiếm:",
                "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                "zeroRecords": "Không tìm thấy kết quả",
                "info": "Hiển thị trang _PAGE_ của _PAGES_",
                "infoEmpty": "Không có dữ liệu",
                "infoFiltered": "(lọc từ _MAX_ tổng số dòng)",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                },
            }
        });
    });
</script>

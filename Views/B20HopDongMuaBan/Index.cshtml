<h1>DANH SÁCH HỢP ĐỒNG</h1>

<div class="custom-header">
    <div></div>
    <div class="custom-search">
        <button class="btn-add-contract" onclick="addContract()">Thêm Hợp Đồng</button>
    </div>
    <div></div>
</div>

<div class="table-responsive">
    <table id="hdMuaBanTable" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã Chi Nhánh</th>
                <th>Mã Đối Tượng</th>
                <th>Tên Đối Tượng</th>
                <th>Mã TDV</th>
                <th>Tên TDV</th>
                <th>Payment-ID</th>
                <th>Payment-Text</th>
                <th>Chiết Khấu</th>
                <th>Mã Số Thuế</th>
                <th>Ngày Ký</th>
                <th>Số Hợp Đồng</th>
                <th>TG Ký HD</th>
                <th>TG Thực Hiện HD</th>
                <th>Lựa Chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Ma_Dvcs</td>
                <td>@item.Ma_Dt</td>
                <td>@item.Ten_Dt</td>
                <td>@item.Ma_TDV</td>
                <td>@item.Ten_TDV</td>
                <td>@item.Payment_ID</td>
                <td>@item.Payment_Text</td>
                <td>@item.CK</td>
                <td>@item.MST</td>
                <td>@item.Ngay_Ky.ToString("dd/MM/yyyy")</td>
                <td>@item.So_Hop_Dong</td>
                <td>@item.TG_Ky_HD</td>
                <td>@item.TG_Th_HD</td>
                <td>
                    <div class="action-buttons">
                        <button class="btn-edit" onclick="editContract('@item.Id')">Sửa</button>
                        <button class="btn-delete" onclick="deleteContract('@item.Id')">Xóa</button>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<script>
function addContract() {
    var branchCodes = ["OPC_CT", "OPC_TP", "OPC_HN", "OPC_MD", "OPC_VT", "OPC_TG", "OPC_NT", "OPC_DN", "OPC_NA"];

    $('<div id="branchCodeDialog" title="Nhập mã chi nhánh">' +
        '<input id="branchCodeInput" type="text" class="form-control">' +
        '</div>').dialog({
            modal: true,
            buttons: {
                "OK": function () {
                    var branchCode = $('#branchCodeInput').val();
                    if (branchCode) {
                        location.href = '@Url.Action("Create", "B20HopDongMuaBan")?branch=' + branchCode;
                    }
                    $(this).dialog("close");
                },
                "Cancel": function () {
                    $(this).dialog("close");
                }
            },
            close: function () {
                $(this).remove();
            }
        });

    $("#branchCodeInput").autocomplete({
        source: branchCodes
    });
}

$(document).ready(function () {
    $('#hdMuaBanTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pageLength": 20,
        "language": {
            "search": "Tìm kiếm:",
            "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
            "zeroRecords": "Không tìm thấy kết quả",
            "info": "Hiển thị trang _PAGE_ của _PAGES_",
            "infoEmpty": "Không có dữ liệu",
            "infoFiltered": "(lọc từ _MAX_ tổng số dòng)",
            "paginate": {
                "first": "Đầu",
                "last": "Cuối",
                "next": "Tiếp",
                "previous": "Trước"
            }
        }
    });
});

function editContract(id) {
    window.location.href = '@Url.Action("Edit", "B20HopDongMuaBan")/' + id;
}

function deleteContract(id) {
    window.location.href = '@Url.Action("Delete", "B20HopDongMuaBan")/' + id;
}
</script>

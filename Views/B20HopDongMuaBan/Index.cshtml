@model IEnumerable<web4.Models.B20HDMuaBan>

@{
    ViewBag.Title = "HỢP ĐỒNG MUA BÁN";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function(event) {
            Swal.fire({
                icon: 'success',
                title: 'Thành công',
                html: '@Html.Raw(HttpUtility.HtmlDecode(TempData["SuccessMessage"].ToString()))',
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'swal2-custom-popup'
                }
            });
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function(event) {
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                html: '@Html.Raw(HttpUtility.HtmlDecode(TempData["ErrorMessage"].ToString()))',
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'swal2-custom-popup'
                }
            });
        });
    </script>
}

